<UserControl x:Class="ClientDesktop.View.Details.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:vm="clr-namespace:ClientDesktop.ViewModel;assembly=ClientDesktop.ViewModel" xmlns:conv="clr-namespace:ClientDesktop.View.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:SideConverter x:Key="SideConverter"/>
        <conv:UtcToIstConverter x:Key="UtcToIstConverter"/>
        <conv:StringTruncateConverter x:Key="TruncateConverter"/>
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HistoryViewModel />
    </UserControl.DataContext>

    <Grid Background="White">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="MenuDeals" Header="Deals" 
                          Click="ChangeView_Click" Tag="Deals" 
                          IsCheckable="True" IsChecked="True"/>

                <MenuItem x:Name="MenuOrders" Header="Orders" 
                          Click="ChangeView_Click" Tag="Orders" 
                          IsCheckable="True" IsChecked="False"/>

                <MenuItem x:Name="MenuPosition" Header="Position" 
                          Click="ChangeView_Click" Tag="Position" 
                          IsCheckable="True" IsChecked="False"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="0,5">
            <Grid>
                <Grid x:Name="HeaderDealsOrders" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="lblTitleDealsOrders" Grid.Column="0" Grid.ColumnSpan="3" 
                               Text="Deals" Style="{StaticResource HeaderLabel}" 
                               FontSize="14" Margin="10,0,0,0"/>

                    <ComboBox x:Name="FilterSymbol" Grid.Column="3" Margin="1" SelectedIndex="0" IsEnabled="False" SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                    </ComboBox>

                    <ComboBox x:Name="FilterExecution" Grid.Column="4" Margin="1" SelectedIndex="0" IsEnabled="False" SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                    </ComboBox>

                    <ComboBox x:Name="FilterType" Grid.Column="5" Margin="1" SelectedIndex="0" IsEnabled="False" SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                    </ComboBox>

                    <ComboBox x:Name="FilterEntry" Grid.Column="6" Margin="1" SelectedIndex="0" IsEnabled="False" SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                    </ComboBox>
                </Grid>

                <Grid x:Name="HeaderPosition" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Position" Grid.Column="0" Style="{StaticResource HeaderLabel}" 
                               FontSize="14" Margin="10,0,0,0"/>

                    <ComboBox Grid.Column="6" SelectedIndex="0" IsEnabled="False" x:Name="FilterPosSymbol" SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center">
                    <ComboBox x:Name="PeriodCombo" Width="120" Margin="5,0" SelectedIndex="0" SelectionChanged="PeriodCombo_SelectionChanged">
                        <ComboBoxItem Content="Today"/>
                        <ComboBoxItem Content="Last 3 Days"/>
                        <ComboBoxItem Content="Last Week"/>
                        <ComboBoxItem Content="Last Month"/>
                        <ComboBoxItem Content="Last 3 Months"/>
                        <ComboBoxItem Content="Last 6 Months"/>
                        <ComboBoxItem Content="All History"/>
                    </ComboBox>

                    <DatePicker x:Name="StartDatePicker" Width="130" 
            Style="{StaticResource CustomDatePickerStyle}"/>
                    <TextBlock Text="-" Style="{StaticResource HeaderLabel}"/>
                    <DatePicker x:Name="EndDatePicker" Width="130" 
            Style="{StaticResource CustomDatePickerStyle}"/>


                    <Button Content="Request" Width="70" Margin="5,0,5,0" 
                            Background="#5D9CEC" Foreground="White" BorderThickness="0" 
                            Click="RequestButton_Click"/>

                    <Button Content="📊" ToolTip="Excel" Width="25" Background="#27AE60" Foreground="White" Margin="1,0"/>
                    <Button Content="📄" ToolTip="PDF" Width="25" Background="#C0392B" Foreground="White" Margin="1,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">

            <DataGrid x:Name="GridDealsOrders" Visibility="Visible"
                      Style="{StaticResource CustomDataGrid}"
                      ItemsSource="{Binding HistoryItems}"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      HeadersVisibility="Column"
                      
                      GridLinesVisibility="All" 
                      HorizontalGridLinesBrush="#E0E0E0" 
                      VerticalGridLinesBrush="#E0E0E0"
                      BorderThickness="0" 
                      
                      Background="White" 
                      RowHeaderWidth="0"
                      RowHeight="22">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Normal"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridRow">
                                    <Border x:Name="DGR_Border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                                        <Grid>
                                            <!-- Normal DataGrid Cells -->
                                            <DataGridCellsPresenter x:Name="CellsPresenter"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                            <!-- Custom Footer Panel -->
                                            <Grid x:Name="FooterPanel" Visibility="Collapsed">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Profit/Credit/Balance Text -->
                                                <TextBlock Text="{Binding Comment}" 
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"/>

                                                <!-- Comm Column with Borders -->
                                                <Border Grid.Column="9" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1,0,1,0">
                                                    <TextBlock Text="{Binding UplineCommission}" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               FontWeight="Bold"/>
                                                </Border>

                                                <!-- Profit Column with Border -->
                                                <Border Grid.Column="10" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,1,0">
                                                    <TextBlock Text="{Binding Pnl}" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RefId}" Value="FOOTER">
                                            <Setter TargetName="CellsPresenter" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="FooterPanel" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="DGR_Border" Property="Background" Value="#D3D3D3"/>
                                        </DataTrigger>

                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="DGR_Border" Property="Background" Value="#0078D7"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.RowStyle>



                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F4F4F4"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#D0D0D0"/>

                        <!-- Disable Hover Effect -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F4F4F4"/>
                                <Setter Property="Foreground" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>


                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}" 
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Time" Width="1.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <!-- Normal rows show time -->
                                            <Setter Property="Text" Value="{Binding CreatedOn, Converter={StaticResource UtcToIstConverter}}"/>

                                            <!-- Footer row shows the Comment text (which contains Profit/Credit/Balance) -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RefId}" Value="FOOTER">
                                                    <Setter Property="Text" Value="{Binding Comment}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Deal Id" Width="*" SortMemberPath="RefId">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Add Trigger to hide text for FOOTER -->
                                    <TextBlock VerticalAlignment="Center" ToolTip="{Binding RefId}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding RefId, Converter={StaticResource TruncateConverter}}"/>
                                                <!-- Hide FOOTER text -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RefId}" Value="FOOTER">
                                                        <Setter Property="Text" Value=""/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Button Margin="5,0,0,0"
                        Click="CopyId_Click"
                        Tag="{Binding RefId}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Copy to Clipboard">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <!-- Hide button for FOOTER -->
                                                    <Trigger Property="Tag" Value="FOOTER">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
                          Fill="#555"
                          Stretch="Uniform"
                          Height="12" Width="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Position Id" Width="*" SortMemberPath="PositionId">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                    <TextBlock Text="{Binding PositionId, Converter={StaticResource TruncateConverter}, TargetNullValue='--', FallbackValue='--'}" 
                           VerticalAlignment="Center" 
                           ToolTip="{Binding PositionId}"/>

                                    <Button Margin="5,0,0,0"
                        Click="CopyId_Click"
                        Tag="{Binding PositionId}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Copy Id">

                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <Trigger Property="Tag" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                    <Trigger Property="Tag" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>

                                                    <Trigger Property="Tag" Value="FOOTER">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>

                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
                          Fill="#555"
                          Stretch="Uniform"
                          Height="12" Width="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Symbol" Binding="{Binding SymbolName}" Width="*" />
                    <DataGridTextColumn Header="Execution" Binding="{Binding OrderType}" Width="0.8*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Side}" Width="0.6*"/>
                    <DataGridTextColumn Header="Entry" Binding="{Binding DealType}" Width="0.6*"/>
                    <DataGridTextColumn Header="Volume" Binding="{Binding Volume}" Width="0.8*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="Comm." Binding="{Binding UplineCommission}" Width="0.8*"/>
                    <DataGridTextColumn Header="Profit" Binding="{Binding Pnl}" Width="*" />
                    <DataGridTemplateColumn Header="Comment" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <!-- Normal rows show comment -->
                                            <Setter Property="Text" Value="{Binding Comment}"/>

                                            <!-- Footer row shows blank -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RefId}" Value="FOOTER">
                                                    <Setter Property="Text" Value=""/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                </DataGrid.Columns>
            </DataGrid>

            <DataGrid x:Name="GridPosition" Visibility="Collapsed"
                      Style="{StaticResource CustomDataGrid}"
                      ItemsSource="{Binding PositionHistoryItems}"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      HeadersVisibility="Column"
                      
                      GridLinesVisibility="All" 
                      HorizontalGridLinesBrush="#E0E0E0" 
                      VerticalGridLinesBrush="#E0E0E0"
                      BorderThickness="0" 
                      
                      Background="White" 
                      RowHeaderWidth="0"
                      RowHeight="22">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F4F4F4"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>

                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#D0D0D0"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}" 
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Normal"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridRow">
                                    <Border x:Name="DGR_Border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                                        <Grid>
                                            <!-- Normal DataGrid Cells -->
                                            <DataGridCellsPresenter x:Name="CellsPresenter"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                            <!-- Custom Footer Panel -->
                                            <Grid x:Name="FooterPanel" Visibility="Collapsed">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <!-- Time -->
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <!-- Last Out Time -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- PositionId -->
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <!-- Type -->
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <!-- Volume -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Symbol -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Price -->
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <!-- Comm -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Profit -->
                                                    <ColumnDefinition Width="2*"/>
                                                    <!-- Comment -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Footer Text: Total in Time column -->
                                                <TextBlock Text="{Binding Comment}" 
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"/>

                                                <!-- Comm Column with Borders -->
                                                <Border Grid.Column="7" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1,0,1,0">
                                                    <TextBlock Text="{Binding Fee}" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               FontWeight="Bold"/>
                                                </Border>

                                                <!-- Profit Column with Border -->
                                                <Border Grid.Column="8" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,1,0">
                                                    <TextBlock Text="{Binding Pnl}" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <!-- Show Footer Panel for FOOTER row -->
                                        <DataTrigger Binding="{Binding RefId}" Value="FOOTER">
                                            <Setter TargetName="CellsPresenter" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="FooterPanel" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="DGR_Border" Property="Background" Value="#D3D3D3"/>
                                        </DataTrigger>

                                        <!-- Selection state -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="DGR_Border" Property="Background" Value="#0078D7"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.RowStyle>


                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding UpdatedAt, Converter={StaticResource UtcToIstConverter}}" Width="1.2*"/>
                    <DataGridTextColumn Header="Last Out Time" Binding="{Binding LastOutAt, Converter={StaticResource UtcToIstConverter}, TargetNullValue='--'}" Width="1.2*"/>
                    <DataGridTemplateColumn Header="PositionId" Width="*" SortMemberPath="RefId">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding RefId, Converter={StaticResource TruncateConverter}}" 
       VerticalAlignment="Center" 
       ToolTip="{Binding RefId}"/>

                                    <Button Margin="5,0,0,0"
    Click="CopyId_Click"
    Tag="{Binding RefId}"
    Background="Transparent"
    BorderThickness="0"
    Cursor="Hand"
    ToolTip="Copy to Clipboard">
                                        <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
      Fill="#555"
      Stretch="Uniform"
      Height="12" Width="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Type" Binding="{Binding Side, Converter={StaticResource SideConverter}}"  Width="0.6*"/>
                    <DataGridTextColumn Header="Volume" Binding="{Binding VolumeDisplay}" Width="0.8*"/>
                    <DataGridTextColumn Header="Symbol" Binding="{Binding SymbolName}" Width="*" />
                    <DataGridTextColumn Header="Price" Binding="{Binding AveragePrice}" Width="*"/>
                    <DataGridTextColumn Header="Comm." Binding="{Binding UplineCommission}" Width="0.8*"/>
                    <DataGridTextColumn Header="Profit" Binding="{Binding Pnl}" Width="*" />
                    <DataGridTemplateColumn Header="Comment" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Comment}" TextWrapping="NoWrap"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <TextBlock x:Name="NoDataLabel" 
                       Text="No data available" 
                       FontSize="24" Foreground="Gray"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Visibility="Visible"/>
        </Grid>

    </Grid>
</UserControl>