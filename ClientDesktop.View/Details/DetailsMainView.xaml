<UserControl x:Class="ClientDesktop.View.Details.DetailsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ClientDesktop.View.Details"
             xmlns:local="clr-namespace:ClientDesktop.View.Details">

    <Grid>
        <TabControl TabStripPlacement="Bottom" 
            Style="{StaticResource CustomTabControl}" Background="White">

            <TabItem Header="Position" Style="{StaticResource CustomTabItem}">
                <local:PositionView />
            </TabItem>

            <TabItem Header="History" Style="{StaticResource CustomTabItem}">
                <TextBlock Text="History Coming Soon..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>

            <TabItem Header="Message" Style="{StaticResource CustomTabItem}">
                <TextBlock Text="No Messages" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>

            <TabItem Header="Journal" Style="{StaticResource CustomTabItem}">
                <TextBlock Text="Journal Empty" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>