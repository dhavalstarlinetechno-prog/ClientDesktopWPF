<UserControl x:Class="ClientDesktop.View.Details.DetailsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ClientDesktop.View.Details"
             xmlns:local="clr-namespace:ClientDesktop.View.Details">

    <Grid>
        <TabControl x:Name="MainTabControl" TabStripPlacement="Bottom" 
                    Style="{StaticResource CustomTabControl}" Background="White">

            <TabItem x:Name="TabPosition" Header="Position" Style="{StaticResource CustomTabItem}">
                <local:PositionView />
            </TabItem>

            <TabItem x:Name="TabHistory" Header="History" Style="{StaticResource CustomTabItem}">
                <TextBlock Text="History Coming Soon..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>

            <TabItem x:Name="TabMessage" Header="Message" Style="{StaticResource CustomTabItem}">
                <views:MessageView />
            </TabItem>

            <TabItem x:Name="TabJournal" Header="Journal" Style="{StaticResource CustomTabItem}">
                <views:JournalView />
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>