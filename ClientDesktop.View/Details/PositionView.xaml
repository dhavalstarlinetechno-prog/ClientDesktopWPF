<UserControl x:Class="ClientDesktop.View.Details.PositionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ClientDesktop.ViewModel;assembly=ClientDesktop.ViewModel"
             xmlns:conv="clr-namespace:ClientDesktop.View.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">

    <UserControl.Resources>
        <conv:ProfitToColorConverter x:Key="ProfitColorConverter"/>
        <conv:OrderTypeToColorConverter x:Key="OrderTypeColorConverter"/>

        <Style x:Key="RightAlignCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:PositionViewModel />
    </UserControl.DataContext>

    <Grid Background="White">

        <DataGrid ItemsSource="{Binding Positions}"
                  Style="{StaticResource CustomDataGrid}"  
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  BorderThickness="0">

            <DataGrid.Columns>
                
                <DataGridTemplateColumn Header="Symbol" Width="1.5*" SortMemberPath="SymbolName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                <Border Margin="5,0,6,0" VerticalAlignment="Center">

                                    <Border.LayoutTransform>
                                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                    </Border.LayoutTransform>

                                    <Grid Width="14" Height="16">
                                        <Path Data="M 2,0 L 10,0 L 14,4 L 14,16 L 2,16 Z"
                              Stroke="{Binding Side, Converter={StaticResource OrderTypeColorConverter}}"
                              StrokeThickness="1"
                              Fill="White"/>

                                        <Path Data="M 10,0 L 10,4 L 14,4"
                              Stroke="{Binding Side, Converter={StaticResource OrderTypeColorConverter}}"
                              StrokeThickness="1"
                              Fill="White"/>

                                        <Path Data="M 4,6 L 10,6 M 4,9 L 10,9 M 4,12 L 8,12"
                              Stroke="{Binding Side, Converter={StaticResource OrderTypeColorConverter}}"
                              StrokeThickness="1"/>
                                    </Grid>
                                </Border>

                                <TextBlock Text="{Binding SymbolName}" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Time" 
                                    Binding="{Binding LastInAt, StringFormat='{}{0:yyyy.MM.dd HH:mm:ss}'}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="1.8*"/>

                <DataGridTextColumn Header="Type" Binding="{Binding Side}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="0.8*"/>

                <DataGridTextColumn Header="Order Type" Binding="{Binding Status}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="1*"/>

                <DataGridTextColumn Header="Volume" Binding="{Binding TotalVolume}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="0.8*"/>

                <DataGridTextColumn Header="Avg Price" Binding="{Binding AveragePrice}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="1*"/>

                <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice}" 
                                    ElementStyle="{StaticResource RightAlignCell}" HeaderStyle="{StaticResource RightHeaderStyle}"
                                    Width="1*"/>

                <DataGridTextColumn Header="Floating P/L" Binding="{Binding Pnl}" Width="1.2*" HeaderStyle="{StaticResource RightHeaderStyle}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,10,0"/>
                            <Setter Property="Foreground" Value="{Binding Pnl, Converter={StaticResource ProfitColorConverter}}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>