                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->

                <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat='{}{0:yyyy.MM.dd HH:mm}'}" ElementStyle="{StaticResource RightAlignCell}" Width="1.5*" SortMemberPath="Time"/>

                <DataGridTemplateColumn Header="Type" Width="0.8*" SortMemberPath="Side">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Side}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Side}" Value="Buy">
                                                <Setter Property="Foreground" Value="#007ACC"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Side}" Value="Sell">
                                                <Setter Property="Foreground" Value="#FF3B30"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Order Type" Binding="{Binding OrderType}" ElementStyle="{StaticResource RightAlignCell}" Width="1*" SortMemberPath="OrderType"/>
                <DataGridTextColumn Header="Volume" Binding="{Binding Volume}" ElementStyle="{StaticResource RightAlignCell}" Width="0.8*" SortMemberPath="Volume"/>
                <DataGridTextColumn Header="Avg Price" Binding="{Binding AveragePrice}" ElementStyle="{StaticResource RightAlignCell}" Width="1*" SortMemberPath="AveragePrice"/>
                <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice}" ElementStyle="{StaticResource RightAlignCell}" Width="1*" SortMemberPath="CurrentPrice"/>

                <DataGridTemplateColumn Header="Floating P/L" Width="1.2*" SortMemberPath="Pnl">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Pnl}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding Pnl, Converter={StaticResource ProfitColorConverter}}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Order">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>