<Application x:Class="ClientDesktop.Main.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClientDesktop.Main"
             xmlns:vm="clr-namespace:ClientDesktop.ViewModel;assembly=ClientDesktop.ViewModel"
             xmlns:view="clr-namespace:ClientDesktop.Main.Login">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ClientDesktop.UserControl;component/Themes/CustomGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/ClientDesktop.UserControl;component/Themes/CustomTabStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:LoginPageViewModel}">
                <view:LoginPage />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>