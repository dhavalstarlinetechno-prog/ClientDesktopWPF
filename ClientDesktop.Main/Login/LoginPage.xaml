<Window x:Class="ClientDesktop.Main.Login.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="320" Width="580" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="30,20,30,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,25">
            <Image Source="/Assests/Images/login_info.png" Width="48" Height="48" VerticalAlignment="Top"/>
            <TextBlock x:Name="messageLabel" 
                       Text="Please enter your Valid Credentials with valid Server Selection for Login." 
                       TextWrapping="Wrap" 
                       MaxWidth="400" 
                       Margin="15,5,0,0" 
                       VerticalAlignment="Top"
                       FontSize="13"/>
        </StackPanel>

        <TextBlock Text="Server:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,15"/>
        <ComboBox x:Name="cmbServerName" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                  Width="300" Height="28" HorizontalAlignment="Left" Margin="0,0,0,15"/>

        <TextBlock Text="Login:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,15"/>
        <ComboBox x:Name="cmbLogin" Grid.Row="2" Grid.Column="1" 
                  Width="160" Height="28" HorizontalAlignment="Left" IsEditable="True" Margin="0,0,0,15"/>

        <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,15"/>
        <Grid Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="160" Margin="0,0,0,15">
            <PasswordBox x:Name="txtPassword" Height="28" PasswordChar="*"/>
            <TextBox x:Name="txtPasswordVisible" Height="28" Visibility="Collapsed"/>
        </Grid>

        <Image x:Name="eyePictureBox" Grid.Row="3" Grid.Column="2" 
               Source="eye_close.png" Width="20" Height="20" 
               Cursor="Hand" Margin="10,0,0,15" VerticalAlignment="Center"
               MouseDown="EyePictureBox_MouseDown"/>

        <CheckBox x:Name="checkBox1" Content="Remember Me" 
                  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                  Margin="0,0,0,20" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="loginButton" Content="Login" Width="100" Height="35" 
                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                    Click="LoginButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="cancelButton" Content="Cancel" Width="100" Height="35" 
                    Background="#DC3545" Foreground="White" FontWeight="Bold" Margin="15,0,0,0"
                    Click="CancelButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Window>