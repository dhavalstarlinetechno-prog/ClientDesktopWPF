<Window x:Class="ClientDesktop.Main.Login.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login"
        Height="Auto"
        Width="550"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

	<Window.Resources>
		<!-- Button Style Template for that Flat Clean Look -->
		<Style x:Key="FlatButtonStyle" TargetType="Button">
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                BorderThickness="0">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Opacity" Value="0.9"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Opacity" Value="0.8"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<!-- Label Column -->
			<ColumnDefinition Width="80"/>
			<!-- Input Column -->
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Header -->
			<RowDefinition Height="15"/>
			<!-- Spacer -->
			<RowDefinition Height="Auto"/>
			<!-- Server -->
			<RowDefinition Height="Auto"/>
			<!-- Login -->
			<RowDefinition Height="Auto"/>
			<!-- Password Row -->
			<RowDefinition Height="20"/>
			<!-- Spacer -->
			<RowDefinition Height="Auto"/>
			<!-- Buttons -->
			<RowDefinition Height="10"/>
			<!-- Bottom Padding -->
		</Grid.RowDefinitions>

		<!-- Header Section -->
		<Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="10,10,10,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Icon Placeholder (Green box simulates the user icon in your image) -->
			<!-- If you have the image, uncomment the Image tag and remove the Border -->
			<Border Grid.Column="0" Width="48" Height="48" CornerRadius="5" Background="#4CAF50" VerticalAlignment="Top" Margin="0,0,15,0">
				<!-- Simple visual fallback if image is missing -->
				<TextBlock Text="***&#10;👤" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
			</Border>
			<!-- <Image Source="/Assets/Images/login_info.png" Width="48" Height="48" VerticalAlignment="Top" Margin="0,0,15,0"/> -->

			<TextBlock Grid.Column="1"
                       Text="Please enter your Valid Credentials with valid Server Selection for Login."
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       FontSize="13"
                       Foreground="#333333"/>
		</Grid>

		<!-- Row 2: Server -->
		<TextBlock Text="Server:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0,0,10,10" FontSize="13"/>
		<ComboBox x:Name="cmbServerName" Grid.Row="2" Grid.Column="1"
                  Height="28" HorizontalAlignment="Stretch" Margin="0,0,40,10"
                  SelectedIndex="0">
			<!-- Sample Data to look like the screenshot -->
			<ComboBoxItem Content="JIO GLOBEX LTD." IsSelected="True"/>
			<ComboBoxItem Content="NSE SERVER 1"/>
		</ComboBox>

		<!-- Row 3: Login -->
		<TextBlock Text="Login:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0,0,10,10" FontSize="13"/>
		<ComboBox x:Name="cmbLogin" Grid.Row="3" Grid.Column="1"
                  Width="180" Height="28" HorizontalAlignment="Left"
                  IsEditable="True" Margin="0,0,0,10"
                  Text="100271"/>

		<!-- Row 4: Password + Eye + Remember Me -->
		<TextBlock Text="Password:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0,0,10,10" FontSize="13"/>

		<StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
			<!-- Password Wrapper -->
			<Grid Width="180" Height="28">
				<PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" Padding="2,0,0,0"/>
				<TextBox x:Name="txtPasswordVisible" Visibility="Collapsed" VerticalContentAlignment="Center" Padding="2,0,0,0"/>
			</Grid>

			<!-- Eye Icon -->
			<Image x:Name="eyePictureBox"
                   Source="/Assets/Images/eye_close.png"
                   Width="20" Height="20"
                   Margin="10,0,10,0"
                   Cursor="Hand"
                   MouseDown="EyePictureBox_MouseDown">
				<Image.ToolTip>Show/Hide Password</Image.ToolTip>
			</Image>

			<!-- Remember Me -->
			<CheckBox x:Name="checkBox1" Content="Remember Me"
                      VerticalAlignment="Center" FontSize="13"/>
		</StackPanel>

		<!-- Row 6: Buttons -->
		<StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
			<Button x:Name="loginButton" Content="Login" Width="100" Height="32"
                    Background="#2196F3" Style="{StaticResource FlatButtonStyle}"
                    Click="LoginButton_Click"/>

			<Button x:Name="cancelButton" Content="Cancel" Width="100" Height="32"
                    Background="#DC3545" Style="{StaticResource FlatButtonStyle}" Margin="15,0,0,0"
                    Click="CancelButton_Click"/>
		</StackPanel>

	</Grid>
</Window>